{
  "code": "ai_neon",
  "index": 70,
  "name": "Neon",
  "description": "Neon is Intel Nervana's reference deep learning framework committed to best performance on all hardware, especially intel hardware. Designed for ease-of-use and extensibility. Use this job template to submit a single node CPU job.",
  "category": "AI",
  "featureCode": "ai",
  "display": true,
  "type": "system",
  "params": [
    {
      "id": "job_name",
      "name": {
        "en": "Job Name",
        "zh": "作业名称"
      },
      "class": "base",
      "dataType": "string",
      "must": true,
      "type": "system",
      "input": "input",
      "maxLength": 64
    },
    {
      "id": "job_workspace",
      "name": {
        "en": "Workspace",
        "zh": "工作目录"
      },
      "class": "base",
      "dataType": "folder",
      "must": true,
      "type": "system"
    },
    {
      "id": "job_queue",
      "name": {
          "en": "Queue",
          "zh": "队列"
      },
      "class": "resource",
      "dataType": "queue",
      "must": true,
      "type": "system"
    },
    {
      "id": "runtime_id",
      "name": {
        "en": "Runtime ENV",
        "zh": "运行环境"
      },
      "class": "param",
      "dataType": "runtime",
      "must": false,
      "defaultValue": null
    },
    {
      "id": "image_path",
      "name": {
        "en": "Container Image",
        "zh": "容器镜像"
      },
      "class": "param",
      "dataType": "image",
      "hypervisor": "singularity",
      "framework": "neon",
      "must": true
    },
    {
      "id": "prog",
      "name": {
        "en": "Program(.py or .sh)",
        "zh": "运行程序(.py 或 .sh)"
      },
      "class": "param",
      "dataType": "file",
      "must": true
    },
    {
      "id": "args",
      "name": {
        "en": "Program Args",
        "zh": "运行参数"
      },
      "class": "param",
      "dataType": "string",
      "input": "input",
      "must": false
    },
    {
      "id": "engine",
      "name": {
        "en": "Mode",
        "zh": "运行模式"
      },
      "class": "param",
      "dataType": "string",
      "input": "select",
      "selectOption": [
        {
          "label": "CPU",
          "value": "cpu"
        },
        {
          "label": "MKL",
          "value": "mkl"
        }
      ],
      "defaultValue": "mkl",
      "must": true
    },
    {
      "id": "exclusive",
      "name": {
        "en": "Exclusive",
        "zh": "独占节点"
      },
      "class": "resource",
      "dataType": "boolean",
      "defaultValue": true,
      "must": false
    },
    {
      "id": "cores_per_node",
      "name": {
        "en": "CPU Cores Per Node",
        "zh": "每节点的CPU核数"
      },
      "class": "resource",
      "dataType": "number",
      "input": "input",
      "minValue": "1",
      "maxValue": "999",
      "floatLength": 0,
      "defaultValue": "4",
      "must": true,
      "visible": "!context.exclusive"
    },
    {
      "id": "run_time",
      "name": {
        "en": "Wall Time",
        "zh": "最大运行时间"
      },
      "class": "resource",
      "dataType": "string",
      "input": "input",
      "tips": {
          "type": "text",
          "content": "eg.3d 4h 12m"
      },
      "help": {
        "en": "Please input run time limit for the job,Format is 'Xd Xh Xm',which 'Xd' represents X days,'Xh' represents X hours and 'Xm' represents X minutes.",
        "zh": "请输入job的运行时间限制，格式为“Xd Xh Xm”，“Xd”表示X天，“Xh”表示X小时，“Xm”表示X分钟。"
      },
      "defaultValue": "24h",
      "must": false
    },
    {
      "id": "job_notify",
      "name": {
        "en": "Notify Job Completion",
        "zh": "作业完成通知"
      },
      "class": "notify",
      "dataType": "string",
      "input": "select",
      "selectOption": [
        {
          "label": {
            "en": "None",
            "zh": "无"
          },
          "value": ""
        },
        {
          "label": {
            "en": "Email",
            "zh": "邮件"
          },
          "value": "email"
        }
      ],
      "defaultValue": "",
      "must": false
    }
  ]
}
